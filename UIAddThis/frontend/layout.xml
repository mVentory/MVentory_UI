<layout version="0.1.0">
  <catalog_product_view>
    <reference name="product.info.sharing">
      <action method="setTemplate">
        <template>uiaddthis/buttons.phtml</template>
      </action>
    </reference>

    <reference name="before_body_end">
      <block type="core/text" name="js.uiaddthis">
        <action method="setText">
          <text><![CDATA[<script async type="text/javascript" src="http://s7.addthis.com/js/300/addthis_widget.js"></script>]]></text>
        </action>
      </block>
    </reference>
  </catalog_product_view>
</layout>
