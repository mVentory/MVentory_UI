<widgets>
    <camerasliderwidget_home type="camerasliderwidget/slider" module="camerasliderwidget">
        <name>Camera Slider Widget</name>
        <description type="desc">Slider with images which load from Flickr.</description>
        
        
        <parameters>
          
          <request_type translate="label" module="camerasliderwidget">
                <visible>1</visible>
                <type>camerasliderwidget/select</type>
                <label>Get images by:</label>
                <values>
                    <default translate="label">
                        <value>photoset_id</value>
                        <label>By photoset Id</label>
                    </default>
                    <list translate="label">
                        <value>user_id</value>
                        <label>By user Id</label>
                    </list>
                </values>
            </request_type>
          
            <user_id translate="label" module="camerasliderwidget">
              <visible>1</visible>
              <label>User id:</label>
              <description>(eg 127651751@N03)</description>
              <type>text</type>
            </user_id>
            <photoset_id translate="label" module="camerasliderwidget">
              <visible>1</visible>
              <label>Photoset id:</label>
              <description><![CDATA[
                 (eg 72157648642068459) <br/>
                 (if a photoset is specified then the user_id will be ignored)
                 ]]></description>
              <type>text</type>
            </photoset_id>
            <paramsstring translate="label" module="camerasliderwidget">
              <visible>1</visible>
              <label>Params for camera.js:</label>
              <description><![CDATA[(comma separated, use single quotes.) <br/>
              (eg: alignment: 'topCenter', height: '66.34%', minHeight: '350px', title:'true', description:'true' ) ]]></description>
              <type>textarea</type>
            </paramsstring>
            
        </parameters>    
    </camerasliderwidget_home>
</widgets> 